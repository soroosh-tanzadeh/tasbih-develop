<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <solid android:color="#EEEEEE"></solid>

            <stroke
                android:width="2dp"
                android:color="#EEEEEE"></stroke>

            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="0dp"></padding>

            <corners android:topRightRadius="45dp" android:topLeftRadius="45dp"></corners>

        </shape>

    </item>
</layer-list>

