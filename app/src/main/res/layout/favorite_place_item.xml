<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/favorite_place_image_card">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/favorite_place_image" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/favorite_place_image_card"
        android:layout_marginTop="8dp"
        android:text="حرم مطهر"
        android:textSize="20sp"
        android:textColor="@color/gray_900"
        android:id="@+id/favorite_place_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/favorite_place_image_card"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="www.web.com"
        android:textColor="@color/colorPrimary"
        android:id="@+id/favorite_place_website" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/phone_message_blue"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/favorite_place_call" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_navigation_blue"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/favorite_place_navigation"
        android:layout_toRightOf="@id/favorite_place_call" />

</RelativeLayout>